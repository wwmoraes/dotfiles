{{- $isPersonal := hasSuffix "Cabuk" .chezmoi.hostname -}}
{{- $isWork := eq "NLLM4000559023" .chezmoi.hostname -}}
{{- $ejsonDict := joinPath .chezmoi.sourceDir ".ejson/secrets.json" | ejsonDecrypt -}}
{{- $nixBuildBin := lookPath "nix-build" | default "/run/current-system/sw/bin/nix-build" -}}

encryption = "gpg"

{{ $ejsonDict | toToml }}

[data.brew]
  {{- if eq .chezmoi.os "darwin" }}
  {{- if eq .chezmoi.arch "arm64" }}
  prefix = "/opt/homebrew"
  repository = "/opt/homebrew"
  {{- else }}
  prefix = "/usr/local"
  repository = "/usr/local/Homebrew"
  {{- end }}
  {{- else }}
  prefix = "/home/linuxbrew/.linuxbrew"
  repository = "/home/linuxbrew/.linuxbrew/Homebrew"
  {{- end }}

{{- if eq .chezmoi.os "darwin" }}
[data.darwin]
pinentryBundlePath = {{ output "mdfind" "kMDItemCFBundleIdentifier" "=" "org.gpgtools.pinentry-mac" | trimAll "\r\n" | quote }}
{{- end }}

[data.nix.roots]
nixDirenv = {{ output $nixBuildBin "<nixpkgs>" "-A" "nix-direnv" "--no-out-link" | trimAll "\r\n" | quote }}
[data.nix.roots.tmuxPlugins]
resurrect = {{ output $nixBuildBin "<nixpkgs>" "-A" "tmuxPlugins.resurrect" "--no-out-link" | trimAll "\r\n" | quote }}
continuum = {{ output $nixBuildBin "<nixpkgs>" "-A" "tmuxPlugins.continuum" "--no-out-link" | trimAll "\r\n" | quote }}
copycat = {{ output $nixBuildBin "<nixpkgs>" "-A" "tmuxPlugins.copycat" "--no-out-link" | trimAll "\r\n" | quote }}
yank = {{ output $nixBuildBin "<nixpkgs>" "-A" "tmuxPlugins.yank" "--no-out-link" | trimAll "\r\n" | quote }}
sessionist = {{ output $nixBuildBin "<nixpkgs>" "-A" "tmuxPlugins.sessionist" "--no-out-link" | trimAll "\r\n" | quote }}

[data.tags]
  personal = {{ $isPersonal }}
  work = {{ $isWork }}

[data.work.features.proxies]
node.enabled = false
python.enabled = true

[diff]
  exclude = ["scripts"]

[gpg]
  recipient = {{ $ejsonDict.data.personal.email | quote }}

[hooks.init.pre]
command = "task"
args = [
  "-d",
  {{ .chezmoi.sourceDir | quote }},
  "secrets"
]

[interpreters.fish]
command = "fish"

[scriptEnv]
  # whether to apply MacOS defaults or not
  DEFAULTS = "1"
  # general script debug
  TRACE = "0"
  VERBOSE = "0"
  {{- if $isPersonal }}
  ENVIRONMENT = "home"
  {{- else if $isWork }}
  ENVIRONMENT = "work"
  {{- end }}
