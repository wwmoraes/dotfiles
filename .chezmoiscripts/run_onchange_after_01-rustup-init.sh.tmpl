test "${TRACE:-0}" = "1" && set -x
test "${VERBOSE:-0}" = "1" && set -v

printf "\e[1;33mRustup init\e[0m\n"

command -V rustup-init >/dev/null 2>&1 || exit

rustup-init -y -q --no-modify-path
