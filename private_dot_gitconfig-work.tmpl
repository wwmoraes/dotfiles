[commit]
  gpgSign = false

[core]
  commentChar = |

[credential]
  # thank you Azure DevOps Platform Team for making PATs expire every 15 days
  # and CISO for blocking Keeper on the CLI. Great security combo guys!
  helper = store
  useHttpPath = false

[diff]
  # SSNS is so bloated that even the sane defaults aren't enough
  renameLimit = 16384

