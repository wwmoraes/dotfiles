root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.vscode/*.json,.shadow.d/.config/Code/User/*.json]
insert_final_newline = false

[*.html]
insert_final_newline = false

[*.json]
insert_final_newline = false

[*.mk]
indent_style = tab

[*.xml]
insert_final_newline = false

[Makefile]
indent_style = tab
