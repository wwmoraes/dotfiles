root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
insert_final_newline = false

[*.{json,json.tmpl}]
insert_final_newline = false

[*.mk]
indent_style = tab

[*.xml]
insert_final_newline = false

[Makefile]
indent_style = tab

# Docker Inc should focus on the config file contents, not its indentation or
# key order...
[*docker/config.json*]
indent_size = 4
indent_style = tab
insert_final_newline = false
