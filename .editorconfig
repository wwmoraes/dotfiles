root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
insert_final_newline = false

[*.{json,json.tmpl}]
insert_final_newline = false

[*.mk]
indent_style = tab

[*.xml]
insert_final_newline = false

[Makefile]
indent_style = tab
