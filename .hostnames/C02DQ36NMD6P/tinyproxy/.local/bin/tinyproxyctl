#!/usr/bin/env bash

set -euo pipefail

case "${1:-}" in
  # "start") exec tinyproxy -d -c ~/.config/tinyproxy/tinyproxy.conf;;
  # "start-daemon") exec tinyproxy -c ~/.config/tinyproxy/tinyproxy.conf;;
  "stop") killall -HUP tinyproxy;;
  "reload") killall -USR1 tinyproxy;;
  *) echo "usage: $0 <stop|reload>"; exit 2;;
esac

# vim: ft=sh
