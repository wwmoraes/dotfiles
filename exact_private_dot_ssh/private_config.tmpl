### Global include
Include config.d/globals/*

IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"

{{- if .tags.personal }}

Match exec "arp -an | grep -qF {{ .networks.home.wireless.mac }} 2> /dev/null"
  Include config.d/locations/home

IdentityFile ~/.ssh/personal.pub
IdentitiesOnly yes

Host github.com bitbucket.org
  IdentityFile ~/.ssh/personal.pub
  IdentitiesOnly yes

{{- else if .tags.work }}

Include config.d/locations/work

IdentityFile ~/.ssh/work.pub
IdentitiesOnly yes

Host github.com
  # ProxyCommand nc -X CONNECT -x localhost:8888 %h %p
  IdentityFile ~/.ssh/work.pub
  IdentitiesOnly yes

Host *.aegon.io
  IdentityFile ~/.ssh/work.pub
  IdentitiesOnly yes

Host tools-bastion
  HostName {{ onepasswordRead "op://Work - Aegon/CCAT tools bastion/hostname" }}
  User {{ onepasswordRead "op://Work - Aegon/CCAT tools bastion/username" }}
  IdentityFile ~/.ssh/bastion.pub
  IdentitiesOnly yes

Host cloudbees-bastion
  Hostname {{ onepasswordRead "op://Work - Aegon/CCAT cloudbees bastion/hostname" }}
  User {{ onepasswordRead "op://Work - Aegon/CCAT cloudbees bastion/username" }}
  IdentityFile ~/.ssh/bastion.pub
  IdentitiesOnly yes

{{- end }}
