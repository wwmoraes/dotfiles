	key = Thanks-to

[transfer]
	fsckObjects = true

[url "git://gist.github.com/"]
	insteadOf = "gist:"

[url "git@github.com:"]
	insteadOf = git://github

[url "git@gist.github.com:"]
	insteadOf = https://gist.github.com/
